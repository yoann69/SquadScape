<h1>Welcome to SquadScape</h1>

<% if current_user %>
  <p>Bienvenue <%= current_user.name %> ! Vous êtes connecté.</p>
  <%= link_to 'Déconnexion', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  <%= link_to 'Créer un profil', new_user_registration_path %>
  <%= link_to 'Dashboard', dashboard_path %>

<% else %>
  <%= link_to 'Créer un profil', new_user_registration_path %>
  <%= link_to 'Se connecter', new_user_session_path %>
<% end %>
